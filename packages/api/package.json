{
  "name": "@covidtop/api",
  "version": "0.0.0",
  "repository": "https://github.com/covidtop/covidtop/tree/master/packages/api",
  "license": "MIT",
  "main": "lib/main.js",
  "scripts": {
    "clean": "dev clean",
    "eslint": "dev eslint src",
    "prettier": "dev prettier src/**/*.ts",
    "build": "dev build",
    "start-production": "NODE_ENV=production API_PORT=14100 node lib/main.js",
    "start-dev": "nodemon"
  },
  "nodemonConfig": {
    "watch": [
      "../../tmp/development/build-info.txt"
    ],
    "env": {
      "NODE_ENV": "development",
      "API_PORT": "4100"
    }
  },
  "dependencies": {
    "@nestjs/common": "7.0.9",
    "@nestjs/core": "7.0.9",
    "@nestjs/platform-express": "7.0.9",
    "@nestjs/schedule": "0.3.1",
    "helmet": "3.22.0",
    "reflect-metadata": "0.1.13"
  },
  "devDependencies": {
    "@covidtop/dev": "0.0.0",
    "@types/helmet": "0.0.45",
    "nodemon": "2.0.3"
  }
}
